   "source": [
    "while True:\n",
    "    word = input(\"Enter a word (must contain at least one uppercase letter): \")\n",
    "    \n",
    "    if any(char.isupper() for char in word):\n",
    "        print(\"Thank you!\")\n",
    "        break\n",
    "    else:\n",
    "        print(\"Error: The word must contain at least one uppercase letter.\\n\")"
   ]
